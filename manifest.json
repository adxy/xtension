{
  "manifest_version": 3,
  "name": "X/Twitter Feed Video/Image Blocker",
  "version": "2.0.1",
  "description": "Hide images, videos, and media-filled quote tweets in your feed behind a click-to-reveal button, while keeping text visible.",
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://www.x.com/*",
        "https://twitter.com/*",
        "https://www.twitter.com/*",
        "https://mobile.twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["changelog/*"],
      "matches": ["<all_urls>"]
    }
  ]
}


