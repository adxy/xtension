{
  "manifest_version": 3,
  "name": "X/Twitter Feed Video Blocker",
  "version": "0.1.0",
  "description": "Hide videos in the X/Twitter feed behind a click-to-reveal overlay while keeping tweet text visible.",
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://www.x.com/*",
        "https://twitter.com/*",
        "https://www.twitter.com/*",
        "https://mobile.twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}


